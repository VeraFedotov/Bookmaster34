<Window x:Class="Bookmaster34.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookmaster34"
        mc:Ignorable="d"
        Title="Bookmaster3000" MinHeight="720"
        MinWidth="1280" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!--Коллекция строк RowDefinitions-->
            <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <!--Меню-->
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Name="LoginMi" Click="LoginMi_Click" Header="Вход в систему"/>
                <MenuItem Name="LogoutMi" Click="LogoutMi_Click"  Header="Выход из системы" Visibility="Collapsed"/>
                <MenuItem Name="CloseAppMi" Click="CloseAppMi_Click" Header="Закрыть приложение"/>
            </MenuItem>
            <MenuItem Name="LibraryMi" Visibility="Collapsed" Header="Библиотека">
                <MenuItem Name="BrowseCatalogMI" Header="Просмотр каталога" Click="BrowseCatalogMI_Click"/>
                <MenuItem Name="ManageCustomersMI" Header="Управление читателями" Click="ManageCustomersMI_Click"/>
                <MenuItem Name="CirculationMI" Header="Управление абонементом" Click="CirculationMI_Click"/>
                <MenuItem Name="ReportsMI" Header="Отчеты" Click="ReportsMI_Click"/>

            </MenuItem>
        </Menu>

        <!--Фрэйм (Принимает и отображает страницы)-->
        <Frame Name="MainFrame" Grid.Row="2" />

    </Grid>
</Window>
